#include <iostream>
using namespace std;
int main()
{
	int n,i,a[30],num,f,l,m;
	cout<<"Enter Size of Array - "; 
    cin>>n;
    cout<<"Enter Array Elements - "; 
	for (i=0;i<n;i++)
        cin>>a[i];
	cout<<"Enter Number to be searched - "; 
    cin>>num;
	f = 0;
	l = n-1;
	m = (f+l)/2;
	while (f<=l)
	{
		if(a[m]<num)
			f=m+1;
	    else if(a[m]=num)
		 	cout<<num<<" found at position "<<m+1<<endl; 
            break; 
    	else
   	    	l=m-1;
        m=(f+l)/2; 
    } 
    if(f>l)
	   cout<<num<<" not Found.";
	return 0;
}
