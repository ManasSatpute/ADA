#include<iostream>
using namespace std;
int mul(int x,int y)
{
	if(y==1)	
		return x;
	int t=mul(x,y/2);
	t+=t;
	if(y%2==1)
		t+=x;
	return t;
}
int main()
{
	int x,y,m;
	cout<<"Enter 2 numbers - ";
	cin>>x>>y;
	if (x==0 || y==0)
		m=0;
	else if(x==1)
		m=y;
	else if(y==1)
		m=x;
	else
		m=mul(x,y);
	cout<<"Product is "<<m;
	return 0;
}
