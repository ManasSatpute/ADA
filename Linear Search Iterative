#include<iostream>
using namespace std;
int main()
{
	int a[10],i,num,n,flag=0,pos;
	cout<<"Enter the Size of Array - ";
	cin>>n;
	cout<<"Enter Array Elements - ";
	for(i=0; i<n; i++)
		cin>>a[i];
	cout<<"Enter the number to be search : ";
	cin>>num;
	for(i=0; i<n; i++)
	{
		if(a[i]==num)
		{
			flag=1;
			pos=i+1;
			break;
		}
	}
	if(flag==0)
		cout<<"Number not found.";
	else
		cout<<num<<" found at position "<<pos;
	return 0;
}
