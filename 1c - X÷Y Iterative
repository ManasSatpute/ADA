#include<iostream>
using namespace std;
void div(int x,int y,int *q,int *r)
{
	int rem;
	int m=x;
	int n=y;
	for(rem=0;m>=n;rem++)
	{
		m-=n;
	}
	*q=rem;
	*r=m;
}
int main()
{
	int x,y,q,r;
	cout<<"Enter Numerator - ";
	cin>>x;
	cout<<"Enter Denominator - ";
	cin>>y;
	if (y==0) {
		cout<<"Not Defined! Denominator can not be 0.";
		return 0;
	}
	else if(x==0) {
		q=0;
		r=0;
	}
	else if(y==1) {
		r=x;
		q=0;
	}
	else {
		div(x,y,&q,&r);
	}
	cout<<"Quotient - "<<q<<endl;
	cout<<"Remainder - "<<r;
	return 0;
}
